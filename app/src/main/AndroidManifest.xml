            android:launchMode="singleTask" />

        <activity
            android:name=".ILoveYouActivity"
            android:exported="true"
            android:launchMode="singleTask" />

        <activity
            android:name=".RestaurantActivity"
            android:exported="true"
            android:launchMode="singleTask" />

        <activity
            android:name=".ProfileLikedActivity"
            android:exported="true"
            android:launchMode="singleTask" />

        <activity
